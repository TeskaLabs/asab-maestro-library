{
	"$id": "General configuration",
	"type": "object",
	"title": "Sidebar",
	"description": "Add configuration distributed among all ASAB microservices",
	"default": {},
	"examples": [
		{
			"library": {
				"providers": ["Some library provider"]
			}
		}
	],
	"required": [],
	"properties": {
		"library": {
			"type": "object",
			"title": "Library",
			"description": "Add custom library providers. See https://docs.teskalabs.com/asab/reference/library/#providers",
			"default": {},
			"examples": [
				{
					"providers": ["Some library provider"]
				}
			],
			"required": ["providers"],
			"properties": {
				"providers": {
					"type": "array",
					"title": "Providers",
					"description": "Add custom library providers. See https://docs.teskalabs.com/asab/reference/library/#providers",
					"default": "",
					"examples": [
						"Some library provider"
					]
				}
			}
		},
		"smtp": {
			"type": "object",
			"title": "SMTP Server",
			"description": "Add configuration for the SMTP server to send emails from the system.",
			"properties": {
				"host": {
					"type": "string",
					"title": "Host",
					"description": "Where is your SMTP server.",
					"examples": "https://smtp-provider.com/"
					},
				"user": {
					"type": "string",
					"title": "User",
					"description": "Set credentials for the SMTP server. Type 'apikey' and fill in apikey into password option if needed."
					},
				"password": {
					"type": "string",
					"title": "Password",
					"description": "Set credentials for the SMTP server."
					},
				"from": {
					"type": "string",
					"format": "email",
					"title": "From",
					"description": "Set default sender email address for this system."
					},
				"subject": {
					"type": "string",
					"title": "Subject",
					"description": "Set default email subject for this system."
					},
				"ssl": {
					"type": "string",
					"enum": ["yes", "no"],
					"title": "SSL",
					"description": "Switch SSL on?",
					"default": [
						"yes",
						"no"
					],
					"$defs": {
						"select": {
							"type": "select"
							}
						}
					},
				"starttls": {
					"type": "string",
					"title": "starttls",
					"enum": ["yes", "no"],
					"default": [
						"yes",
						"no"
					],
					"$defs": {
						"select": {
							"type": "select"
							}
						}
				}
			},
			"required": ["host", "user", "password"]
		  }
	},
	"additionalProperties": true
}
